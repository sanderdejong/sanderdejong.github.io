---
interface Props {
    author?: string;
}

const { author = "Sander de Jong" } = Astro.props;
---

<footer class="footer" transition:persist>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="footer-icon">
        <circle cx="12" cy="12" r="10"/>
        <path d="M14.83 14.83a4 4 0 1 1 0-5.66"/>
    </svg>
    <span>{new Date().getFullYear()} {author}</span>
</footer>

<style>
    .footer {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem;
        font-size: 0.875rem;
        color: var(--color-text-secondary);
        position: relative;
        z-index: 1;
    }

    .footer-icon {
        flex-shrink: 0;
    }
</style>

