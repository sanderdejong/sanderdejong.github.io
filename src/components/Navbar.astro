---
import SettingsModal from './SettingsModal.astro';
const currentPath = Astro.url.pathname;
---

<!-- Mobile menu button -->
<button class="mobile-menu-btn" id="mobile-menu-btn" aria-label="Open menu" aria-haspopup="true" aria-expanded="false" transition:persist="mobile-menu-btn">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="close-icon"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
</button>

<!-- Mobile menu overlay -->
<div class="mobile-menu-overlay" id="mobile-menu-overlay" transition:persist="mobile-menu-overlay"></div>

<!-- Mobile menu drawer -->
<div class="mobile-menu" id="mobile-menu" transition:persist="mobile-menu">
    <ul class="mobile-nav-list">
        <li><a href="/" class:list={["mobile-nav-link", { active: currentPath === "/" }]}>Home</a></li>
        <li><a href="/about" class:list={["mobile-nav-link", { active: currentPath === "/about" || currentPath === "/about/" }]}>About</a></li>
        <li><a href="/contact" class:list={["mobile-nav-link", { active: currentPath === "/contact" || currentPath === "/contact/" }]}>Contact</a></li>
    </ul>
    <button class="mobile-settings-btn" id="mobile-settings-btn" aria-label="Settings">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
        <span>Settings</span>
    </button>
</div>

<!-- Desktop navbar -->
<nav class="navbar" transition:persist="navbar">
    <ul class="nav-list">
        <li><a href="/" class:list={["nav-link", { active: currentPath === "/" }]}>Home</a></li>
        <li><a href="/about" class:list={["nav-link", { active: currentPath === "/about" || currentPath === "/about/" }]}>About</a></li>
        <li><a href="/contact" class:list={["nav-link", { active: currentPath === "/contact" || currentPath === "/contact/" }]}>Contact</a></li>
        <li class="settings-container">
            <button class="settings-btn" id="settings-btn" aria-label="Settings" aria-haspopup="true" aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
            </button>
        </li>
    </ul>
</nav>

<SettingsModal />

<script is:inline>
    function openSettingsModal() {
        const settingsModal = document.getElementById('settings-modal');
        const settingsOverlay = document.getElementById('settings-overlay');
        const settingsBtn = document.getElementById('settings-btn');

        settingsModal?.classList.add('open');
        settingsOverlay?.classList.add('open');
        settingsBtn?.setAttribute('aria-expanded', 'true');
        closeMobileMenu();
    }

    function toggleMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');

        const isOpen = mobileMenu?.classList.toggle('open');
        mobileMenuOverlay?.classList.toggle('open');
        mobileMenuBtn?.classList.toggle('open');
        mobileMenuBtn?.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
    }

    function closeMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');

        mobileMenu?.classList.remove('open');
        mobileMenuOverlay?.classList.remove('open');
        mobileMenuBtn?.classList.remove('open');
        mobileMenuBtn?.setAttribute('aria-expanded', 'false');
    }

    function initNavbar() {
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
        const settingsBtn = document.getElementById('settings-btn');
        const mobileSettingsBtn = document.getElementById('mobile-settings-btn');

        // Update active state for nav links after page transition
        const currentPath = window.location.pathname;

        // Update desktop nav links
        document.querySelectorAll('.nav-link').forEach(link => {
            const href = link.getAttribute('href');
            const isActive = href === currentPath || href + '/' === currentPath || currentPath + '/' === href;
            link.classList.toggle('active', isActive);
        });

        // Update mobile nav links
        document.querySelectorAll('.mobile-nav-link').forEach(link => {
            const href = link.getAttribute('href');
            const isActive = href === currentPath || href + '/' === currentPath || currentPath + '/' === href;
            link.classList.toggle('active', isActive);
        });

        // Close mobile menu after navigation (in case it was open)
        closeMobileMenu();

        // Attach event listeners only once using data-initialized attribute
        if (mobileMenuBtn && !mobileMenuBtn.dataset.initialized) {
            mobileMenuBtn.dataset.initialized = 'true';
            mobileMenuBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                toggleMobileMenu();
            });
        }

        if (mobileMenuOverlay && !mobileMenuOverlay.dataset.initialized) {
            mobileMenuOverlay.dataset.initialized = 'true';
            mobileMenuOverlay.addEventListener('click', closeMobileMenu);
        }

        if (mobileMenu && !mobileMenu.dataset.initialized) {
            mobileMenu.dataset.initialized = 'true';
            mobileMenu.querySelectorAll('.mobile-nav-link').forEach(link => {
                link.addEventListener('click', closeMobileMenu);
            });
        }

        if (settingsBtn && !settingsBtn.dataset.initialized) {
            settingsBtn.dataset.initialized = 'true';
            settingsBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                openSettingsModal();
            });
        }

        if (mobileSettingsBtn && !mobileSettingsBtn.dataset.initialized) {
            mobileSettingsBtn.dataset.initialized = 'true';
            mobileSettingsBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                openSettingsModal();
            });
        }
    }

    // Run on initial load and after each page transition
    document.addEventListener('astro:page-load', initNavbar);

    // Close mobile menu immediately when navigation starts (before transition)
    document.addEventListener('astro:before-preparation', closeMobileMenu);
</script>

<style>
    .navbar {
        position: fixed;
        top: 2.5rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 100;
        padding: 1rem 2rem;
    }

    .nav-list {
        display: flex;
        gap: 3rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .nav-list li {
        flex-shrink: 0;
    }

    .nav-link {
        display: block;
        font-family: var(--font-heading-secondary), monospace;
        font-size: 1.1rem;
        font-weight: 450;
        letter-spacing: 0.03em;
        text-transform: lowercase;
        color: var(--color-text-secondary);
        text-decoration: none;
        padding: 0.6rem 1.2rem;
        position: relative;
        transition: color 0.3s ease;
    }

    .nav-link::after {
        display: none !important;
        content: none !important;
    }

    .nav-link::before {
        content: './';
        position: absolute;
        right: 100%;
        margin-right: -1.0rem;
        top: 50%;
        transform: translateY(-50%) translateX(-5px);
        font-size: 1rem;
        color: #3b82f6;
        opacity: 0;
        white-space: nowrap;
        transition: opacity 0.25s ease, transform 0.25s ease;
    }

    .nav-link:hover,
    .nav-link:focus-visible {
        color: var(--color-text-primary);
    }

    .nav-link:not(.active):hover::before,
    .nav-link:not(.active):focus-visible::before {
        content: 'cd ./';
        opacity: 1;
        transform: translateY(-50%) translateX(0);
    }

    .nav-link.active {
        color: var(--color-text-primary);
    }

    .nav-link.active::before {
        opacity: 1;
        transform: translateY(-50%) translateX(0);
    }

    .nav-link:active {
        color: #3b82f6;
    }

    @media (max-width: 1024px) {
        .navbar {
            display: none;
        }

        .nav-list {
            gap: 2rem;
        }

        .nav-link {
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
        }
    }

    /* Mobile menu button */
    .mobile-menu-btn {
        display: none;
        position: fixed;
        top: 1.5rem;
        left: 1.5rem;
        z-index: 200;
        background: var(--color-bg-primary);
        border: 1px solid var(--color-border);
        border-radius: 0.5rem;
        padding: 0.6rem;
        cursor: pointer;
        color: var(--color-text-secondary);
        transition: color 0.3s ease, border-color 0.3s ease;
    }

    .mobile-menu-btn:hover,
    .mobile-menu-btn:focus-visible {
        color: var(--color-text-primary);
        border-color: var(--color-text-secondary);
    }

    .mobile-menu-btn .close-icon {
        display: none;
    }

    .mobile-menu-btn.open .menu-icon {
        display: none;
    }

    .mobile-menu-btn.open .close-icon {
        display: block;
    }

    /* Mobile menu overlay */
    .mobile-menu-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 150;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

    .mobile-menu-overlay.open {
        opacity: 1;
        pointer-events: auto;
    }

    /* Mobile menu drawer */
    .mobile-menu {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 280px;
        max-width: 80vw;
        height: 100%;
        background: var(--color-bg-primary);
        border-right: 1px solid var(--color-border);
        z-index: 175;
        padding: 5rem 1.5rem 2rem;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        flex-direction: column;
    }

    .mobile-menu.open {
        transform: translateX(0);
    }

    .mobile-nav-list {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .mobile-nav-link {
        display: block;
        font-family: var(--font-heading-secondary), monospace;
        font-size: 1.1rem;
        font-weight: 450;
        letter-spacing: 0.03em;
        text-transform: lowercase;
        color: var(--color-text-secondary);
        text-decoration: none;
        padding: 0.75rem 1rem;
        padding-left: 2.5rem;
        border-radius: 0.5rem;
        transition: color 0.3s ease, background 0.3s ease;
        position: relative;
    }

    .mobile-nav-link::after {
        display: none !important;
        content: none !important;
    }

    .mobile-nav-link::before {
        content: './';
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1rem;
        color: #3b82f6;
        opacity: 0;
        transition: opacity 0.25s ease;
    }

    .mobile-nav-link.active {
        color: var(--color-text-primary);
        background: var(--color-bg-secondary);
    }

    .mobile-nav-link.active::before {
        opacity: 1;
    }

    .mobile-settings-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-top: auto;
        padding: 0.75rem 1rem;
        background: none;
        border: 1px solid var(--color-border);
        border-radius: 0.5rem;
        cursor: pointer;
        color: var(--color-text-secondary);
        font-family: var(--font-heading-secondary), monospace;
        font-size: 1rem;
        transition: color 0.3s ease, border-color 0.3s ease;
    }

    .mobile-settings-btn:hover,
    .mobile-settings-btn:focus-visible {
        color: var(--color-text-primary);
        border-color: var(--color-text-secondary);
    }

    @media (max-width: 1024px) {
        .mobile-menu-btn {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .mobile-menu-overlay {
            display: block;
        }

        .mobile-menu {
            display: flex;
        }
    }

    .settings-container {
        position: relative;
        display: flex;
        align-items: center;
    }

    .settings-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.6rem;
        color: var(--color-text-secondary);
        transition: color 0.3s ease;
    }

    .settings-btn:hover,
    .settings-btn:focus-visible {
        color: var(--color-text-primary);
    }

    .settings-btn :global(svg) {
        transition: transform 0.4s ease;
    }

    .settings-btn:hover :global(svg),
    .settings-btn:focus-visible :global(svg) {
        transform: rotate(90deg);
    }
</style>

